{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "REDIS_URL": "@redis_url",
    "ADMIN_PASSWORD": "@admin_password",
    "JWT_SECRET": "@jwt_secret",
    "NEXT_PUBLIC_APP_NAME": "EyeSeas Navigation",
    "NEXT_PUBLIC_APP_DESCRIPTION": "Internal and External Navigation Dashboard"
  },
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
}
